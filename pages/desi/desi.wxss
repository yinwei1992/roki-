/* pages/desi/desi.wxss */
page{
 background-color: #fff
}

.da-container{
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.img-show{
  width:100%;
  height: 400rpx; 
}

.img-show image{
  width: 100%;
  height: 100%;
}


.tip-container{
  display: flex;
  justify-content: flex-end;
  position: relative;
  margin-top: -50rpx;
  padding-right: 80rpx;
}

.tip{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.title-container{
  display: flex;
  justify-content: flex-start;
  padding-left: 20rpx;
}

.title-container text{
  font-size: 15px;
  color: #000000;
}

.visist-view{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.eye{
  width: 30rpx;
  height: 30rpx;
}

.view-num{
  font-size: 14px;
   color: #A4A4A4;
}

.detail-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 50rpx;
  padding-bottom: 30rpx;
}

.txt1{
   font-size: 14px;
   color: #A4A4A4;
}

.txt2{
   font-size: 15px;
   color: #A4A4A4;
}
