
/* ！！小程序的图片记得设置宽高 */
@import "../template/recipeItem.wxss";
@import "../template/themeShow.wxss";
page{
 background-color: #fff
}
.slider, 
.slider image ,
.slider swiper{
    width: 100%;
    height: 390rpx;
}

.index-nav {
    /* 1.5. 给当前父元素设置成伸缩盒模式 */
    display: flex;
}

.index-nav .nav-item {
    width: 25%;
    height: 200rpx;
    /* 1.1. 给当前父元素设置成伸缩盒模式 */
    display: flex;
    /* 1.2. 设置垂直排列 */
    flex-direction: column;
    /* 1.3.设置主轴居中 */
    justify-content: center;
    /* 1.4.设置交叉轴居中 */
    align-items: center;
    /* 1.7微信小程序的字号大小官方推荐使用 px */
    font-size: 11px;
    /* 2.0.底部边框，直接通过border-bottom */
    color: #A4A4A4;
}





/* ！！小程序的图片记得设置宽高 */

.index-nav image {
    width: 150rpx;
    height: 90rpx;
    margin-bottom: 10rpx;
}

/* -------------
