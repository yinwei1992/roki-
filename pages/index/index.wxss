 * -------------
*/

.index-enter {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content:space-between;
    align-items: center;
   
}

.index-enter .enter-item1 {
    width: 60%;
    display: flex;
    padding-left: 25rpx;
}

.index-enter .enter-item2 {
    width: 40%;
    display: flex;
    padding-right: 25rpx;
}

.index-enter .enter-item1 image {
    width: 375rpx;
    height: 178rpx;
}

.index-enter .enter-item2 image {
    width: 320rpx;
    height: 178rpx;
}

.title-show{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

.title-show .theme-com{
  display: flex;
  align-items: center;
  font-weight: bold;
  font-size: 18px;
}

.title-show .morelook{
  display: flex;
  align-items: center;
  color: #A4A4A4;
}

