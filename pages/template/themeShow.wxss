.theme-contain{
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.theme-contain .theme-show{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.theme-contain .theme-show image{
  width: 100%;
  height: 400rpx;
}

.theme-title-show{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding-top: 10rpx;
}

.theme-time{
  font-size: 10px;
  color: #A4A4A4;
}

.theme-subtitle{
  font-size: 13px;
  color: #A4A4A4;
}

