.item{
    background-color: #fff;
    border:1rpx solid #ddd;
    border-radius: 10rpx;
    margin: 10rpx 10rpx;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
}

.item-img{
  width: 100%;
  height: 250rpx;
}

.name{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.name-txt{
  display: flex;
  flex-direction: column;
}

.name-title{
  font-size: 15px;
}

.collect{
  font-size: 10px;
  color: #A4A4A4;
}

.logo{
  width: 60rpx;
  height: 60rpx;
}

